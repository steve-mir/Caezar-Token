<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMiscellaneous"
    android:orientation="vertical"
    app:behavior_peekHeight="10dp"
    android:background="@drawable/bg_transparent"
    app:layout_behavior="com.example.caezar.libs.AutoCloseBottomSheetBehavior">
    <!--app:layout_behavior="@string/bottom_sheet_behavior">-->

    <!--
    android:background="@drawable/background_sign_in"
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/innerLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red_active"
        android:background="@drawable/background_sign_in">-->




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="10"
        android:layout_marginTop="40dp"
        android:background="@drawable/background_sign_in">

        <TextView
            android:id="@+id/name_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Binance coin"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/symbol_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BNB"
            android:textColor="@color/grey_active"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/name_desc"
            app:layout_constraintStart_toStartOf="@id/name_desc"
            app:layout_constraintEnd_toEndOf="@id/name_desc"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BNB was created my binanace so as to use in their network"
            android:textColor="@color/grey_active"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/symbol_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/price_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIVE PRICE"
            android:textColor="@color/grey_active"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/price_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$598.34"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/price_text_desc"
            app:layout_constraintStart_toStartOf="@id/price_text_desc"
            app:layout_constraintEnd_toEndOf="@id/price_text_desc"/>

        <View
            android:id="@+id/view_right"
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:background="@color/grey_active"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/price_desc"
            app:layout_constraintTop_toTopOf="@id/price_text_desc"
            app:layout_constraintBottom_toBottomOf="@id/price_desc"/>

        <TextView
            android:id="@+id/mark_cap_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MARKET CAP"
            android:textColor="@color/grey_active"
            app:layout_constraintTop_toTopOf="@id/price_text_desc"
            app:layout_constraintStart_toEndOf="@id/view_right"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/mark_cap_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$18.34"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/mark_cap_text_desc"
            app:layout_constraintStart_toStartOf="@id/mark_cap_text_desc"
            app:layout_constraintEnd_toEndOf="@id/mark_cap_text_desc"/>


        <View
            android:id="@+id/view_left"
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:background="@color/grey_active"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@id/price_desc"
            app:layout_constraintTop_toTopOf="@id/price_text_desc"
            app:layout_constraintBottom_toBottomOf="@id/price_desc"/>

        <TextView
            android:id="@+id/rank_text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RANK"
            android:textColor="@color/grey_active"
            app:layout_constraintTop_toTopOf="@id/price_text_desc"
            app:layout_constraintEnd_toStartOf="@id/view_left"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/rank_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP #3"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/rank_text_desc"
            app:layout_constraintStart_toStartOf="@id/rank_text_desc"
            app:layout_constraintEnd_toEndOf="@id/rank_text_desc"/>

        <TextView
            android:id="@+id/priceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="PRICE HISTORY"
            android:background="@drawable/bg_sqr_price_btn"
            android:layout_marginTop="30dp"
            android:paddingStart="60sp"
            android:paddingEnd="60sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/rank_desc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/logo_desc"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="8dp"
        android:background="@drawable/bg_dark_circle_alt"
        android:src="@drawable/home"
        app:layout_constraintBottom_toTopOf="@id/lineView"
        app:layout_constraintTop_toTopOf="@id/lineView"
        app:layout_constraintStart_toStartOf="@id/lineView"
        app:layout_constraintEnd_toEndOf="@id/lineView"/>






    <!--</androidx.constraintlayout.widget.ConstraintLayout>-->


</androidx.constraintlayout.widget.ConstraintLayout>